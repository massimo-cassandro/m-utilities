  {% include '@includes/file_uploader.html.twig' with {
    data: {
      uploader_legend: true,
      uploader_legend_text: '__legend__',

      varname: 'user_file',
      registered_extra_field_varname: 'registered_files',

      filetype: 'auto|pdf|img',
      max_filesize: 'xx',
      img_min_w: null,
