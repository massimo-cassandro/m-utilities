{% set flash_messages = app.flashes|default() %}
{%- if flash_messages -%}
  {% set type = '' %}
  {% set title = '' %}
  {% set mes = '' %}
  {% set mes_array = [] %}

  {% for label, messages in flash_messages %}
    {% set type = label %}
    {% for message in messages %}
      {% set mes_array = mes_array|merge([message]) %}
    {% endfor %}
  {% endfor %}

  {% set mes = mes_array|join('<br>') %}

  {%- if type == 'success' -%}
    {% set title = 'Operazione completata' %}

  {%- elseif type == 'error' or type == 'notice' -%}
    {% set title = 'Si Ã¨ verificato un errore' %}
    {% set type = 'error' %}

  {%- elseif type == 'warning' -%}
    {% set title = 'Attenzione!' %}

  {%- else -%}
    {% set title = '' %}
    {% set type = 'info' %}

  {%- endif -%}

  <script>

    {%- if app.environment != 'prod' -%}
      console.groupCollapsed('Flash message');
      console.warn({
        type        : '{{ type }}',
        title       : '{{ title|e('js')  }}',
        mes         : '{{ mes|e('js') }}',
        timer       : null,
        ok_btn_text : 'OK'
      });
      console.groupEnd();
    {%- endif -%}

    mAlert({
      type        : '{{ type }}',
      title       : '{{ title|e('js') }}',
      mes         : '{{ mes|e('js') }}',
      timer       : null,
      ok_btn_text : 'OK'
    });
  </script>
{%- endif -%}
