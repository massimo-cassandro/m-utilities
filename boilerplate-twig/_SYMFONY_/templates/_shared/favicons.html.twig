NB dir con slash finale
#}

{% set dir = dir is defined? dir : 'assets/favicons/'  %}

{# SVG favicons #}
<meta name="theme-color" content="#ffffff">
<link rel="icon" href="{{ asset( dir ~ 'favicon.svg') }}">
<link rel="mask-icon" href="{{ asset( dir ~ 'mask-icon.svg') }}" color="#000000">
<link rel="apple-touch-icon" href="{{ asset( dir ~ 'apple-touch-icon.png') }}">
<link rel="manifest" href="{{ asset( dir ~ 'manifest.json') }}">

